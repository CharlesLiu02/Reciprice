<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView_add_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/editText_add_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_add_reps"
        android:layout_width="28dp"
        android:layout_height="44dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:hint="#"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/editText_add_distance"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="121dp" />

    <EditText
        android:id="@+id/editText_add_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Distance"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/button_add_nextPart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText_add_reps"
        app:layout_constraintTop_toBottomOf="@+id/textView_add_instructions" />

    <Button
        android:id="@+id/button_add_nextPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Next Part"
        app:layout_constraintBottom_toTopOf="@+id/editText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_add_distance" />

    <Button
        android:id="@+id/button_add_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Set"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="108dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Rounds"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/button_add_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_nextPart" />
</android.support.constraint.ConstraintLayout>